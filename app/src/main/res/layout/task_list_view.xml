<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        android:layout_margin="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvEventTitle"
                        android:layout_width="match_parent"
                        android:text="Dr.Sharmin Alam Nipu"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:paddingTop="3dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvEventReminderTime"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:layout_marginLeft="5dp"
                        android:text="Reminder Time : 10:40Pm"
                        android:gravity="left"
                        android:textSize="14sp"
                        android:layout_marginTop="3dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvEventDescription"
                        android:layout_width="match_parent"
                        android:textColor="#DF9C9797"
                        android:layout_marginLeft="5dp"
                        android:text="Medicineweiufhbvskdj.gwdsjkbvwuidsbvx ckgvjbks fbvsdjkxc kzdvh"
                        android:gravity="left"
                        android:textSize="14sp"
                        android:layout_marginTop="3dp"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/moreOptionBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_more_horiz_24"/>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#EAE7E7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/ic_grey_calender"/>

                    <TextView
                        android:id="@+id/tvEventDate"
                        android:layout_width="wrap_content"
                        android:text="!2/01/2021"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_grey_timer"/>

                    <TextView
                        android:id="@+id/tvEventTime"
                        android:layout_width="wrap_content"
                        android:text="10:30 PM"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivEventStatus"
                        android:layout_width="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_circle"/>

                    <TextView
                        android:id="@+id/tvEventStatus"
                        android:layout_width="wrap_content"
                        android:text="Upcoming"
                        android:textColor="#FFC107"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>